pipeline {
    agent any

    stages {
        stage('Setup Environment') {
            steps {
                sh '''
                python3 -m venv venv
                ./venv/bin/pip install -r jenkins-python-project/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                cd jenkins-python-project
                export PYTHONPATH=$PWD
                ../venv/bin/pytest -v
                '''
            }
        }
    }

    post {
        success {
            echo 'Build Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}
